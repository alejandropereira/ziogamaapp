<div class="page-header">
  <h1>Usuarios
<%= link_to "Nuevo",
            new_user_path,
            :class => 'btn btn-primary pull-right' %>
  </h1>
</div>

<table class="table table-striped data">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Usuario</th>
      <th>Rol</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td><%= Role.human_attribute_name(user.role) %></td>
        <td>
          <div class="btn-group">
          <%= link_to "Ver",
                      user, :class => 'btn btn-mini btn-success' %>
          <%= link_to "Editar",
                      edit_user_path(user), :class => 'btn btn-mini' %>
          <%= link_to "Borrar",
                      user,
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

