<div class="page-header">
	<h1>Vendedores</h1>
</div>

<table class="table table-striped data">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Email</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td>
          <div class="btn-group">
          <%= link_to "Ver",
                      "/admin/ventas/#{user.username}", :class => 'btn btn-success' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
