<%- model_class = Prospect -%>
<div class="page-header">
  <h1>Prospecto</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>Nombre del cliente:</strong></dt>
  <dd><%= @prospect.name %></dd>
  <dt><strong>Empresa:</strong></dt>
  <dd><%= @prospect.company %></dd>
  <dt><strong>Teléfono:</strong></dt>
  <dd><%= @prospect.phone %></dd>
  <dt><strong>Dirección:</strong></dt>
  <dd><%= @prospect.address %></dd>
  <dt><strong>Email:</strong></dt>
  <dd><%= @prospect.email %></dd>
  <dt><strong>Interesado:</strong></dt>
  <dd><%= @prospect.state? ? 'Si' : 'No' %></dd>
  <dt><strong>Producto de interes:</strong></dt>
  <dd><%= @prospect.product %></dd>
  <dt><strong>Cotizado:</strong></dt>
  <dd><%= @prospect.status? ? 'Si' : 'No' %></dd>
  <dt><strong>Comentarios:</strong></dt>
  <dd><%= @prospect.comments %></dd>
</dl>

<div class="form-actions">
  <%= link_to "Regresar",
              prospects_path, :class => 'btn'  %>
  <%= link_to "Editar",
              edit_prospect_path(@prospect), :class => 'btn' %>
  <%= link_to "Borrar",
              prospect_path(@prospect),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
