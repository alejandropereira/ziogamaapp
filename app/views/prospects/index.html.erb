<div class="alert alert-info">
  <button type="button" class="close" data-dismiss="alert">&times;</button>
  <%= day_goal %>
</div>

<div class="page-header">
  <h1>Prospectos
<%= link_to "Nuevo",
            new_prospect_path,
            :class => 'btn btn-primary pull-right' %>
  </h1>
</div>

<%= content_tag :div, "", id: "graph", data: {orders: current_user.prospects.chart_data} %>

<table class="table table-striped data">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Empresa</th>
      <th>Tel√©fono</th>
      <th>E-mail</th>
      <th>Interesado</th>
      <th>Cotizado</th>
      <th>Vendedor</th>
      <th>Completo</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
        <td><%= prospect.name %></td>
        <td><%= prospect.company %></td>
        <td><%= prospect.phone %></td>
        <td><%= prospect.email %></td>
        <td><%= interes(prospect.state) %></td>
        <td><%= quote(prospect.status) %></td>
        <td><%= prospect.user.name %></td>
        <td><%= complete(prospect.complete) %></td>
        <td>
          <div class="btn-group">
          <%= link_to "Ver",
                      prospect, :class => 'btn btn-mini btn-success' %>
          <%= link_to "Editar",
                      edit_prospect_path(prospect), :class => 'btn btn-mini' %>
          <%= link_to "Borrar",
                      prospect_path(prospect),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Esta seguro?')) },
                      :class => 'btn btn-mini btn-danger' %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>